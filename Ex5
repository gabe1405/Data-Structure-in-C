#include <stdlib.h>
#include <stdio.h>

void valoresFunc(int n, int* vetor){
  while(n >= 0){
    printf("Digite aqui um numero:");
    scanf("%d",&vetor[n]);
    n--;
  }
}

int main(){

  int n;
  int i;

  printf("Digite aqui um valor:");
  scanf("%d",&n);

  int *vetor;
  vetor = malloc(n * sizeof(int));

  i = n - 1;//por começar em zero os vetores, se subtrai 1 para que conte o vetor 0 também
  n--;

  valoresFunc(n, vetor);

  printf("Valores digitados:\n");

  while(i >= 0){
  printf("%d\n",vetor[i]);
  i--;
}
  free(vetor);

  return 0;
}
